@model ecommerce.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "_DashbourdLayout";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>

<div class="card container" style="width: 18rem;">
    <img class="card-img-top" src="@Model.ImageUrl" alt="@Model.Name">
    <div class="card-body">
        <h5 class="card-title">@Model.Name Category</h5>
        <p class="card-text">@Model.Description</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Products Number: @if (Model.Products != null) { Model.Products.Count(); } 0</li>
    </ul>
    <div class="card-body">
        

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="categories" asp-controller="dashbourd" class="btn btn-secondary">Cancel</a>
        </form>


    </div>
</div>

